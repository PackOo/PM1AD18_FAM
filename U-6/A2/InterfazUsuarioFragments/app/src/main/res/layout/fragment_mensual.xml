<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MensualFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/imagen_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/gato_negro"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/nombre_mes_card"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Octubre 2018"
                app:layout_constraintTop_toBottomOf="@+id/imagen_card"
                />
            <Button
                android:id="@+id/btnsemana1_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.1"
                app:layout_constraintTop_toBottomOf="@+id/nombre_mes_card"
                />
            <Button
                android:id="@+id/btnsemana2_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.2"
                app:layout_constraintLeft_toRightOf="@+id/btnsemana1_card"
                app:layout_constraintTop_toBottomOf="@+id/nombre_mes_card"
                />
            <Button
                android:id="@+id/btnsemana3_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.3"
                app:layout_constraintLeft_toRightOf="@+id/btnsemana2_card"
                app:layout_constraintTop_toBottomOf="@+id/nombre_mes_card"
                />
            <Button
                android:id="@+id/btnsemana4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.4"
                app:layout_constraintLeft_toRightOf="@+id/btnsemana3_card"
                app:layout_constraintTop_toBottomOf="@+id/nombre_mes_card"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</FrameLayout>